# OIKAD Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (Optional)
# =============================================================================
# If you want to use Supabase for backend services, configure these:
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key_here

# =============================================================================
# GITHUB CONFIGURATION (For Auto-Updates)
# =============================================================================
# GitHub Personal Access Token for checking releases
# Generate at: https://github.com/settings/tokens
# Required permissions: public_repo (if public) or repo (if private)
GITHUB_TOKEN=github_pat_your_token_here

# GitHub Repository URL for releases (optional override)
# Default: https://api.github.com/repos/paterkleomenis/oikad/releases
GITHUB_REPO_URL=https://api.github.com/repos/your-username/your-repo/releases

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# App environment (development, staging, production)
APP_ENV=development

# Enable debug features (true/false)
DEBUG_MODE=true

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# If you want to add analytics or crash reporting
ANALYTICS_API_KEY=your_analytics_key_here
CRASH_REPORTING_DSN=your_crash_reporting_dsn_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Custom encryption key for local storage (optional)
ENCRYPTION_KEY=your_32_character_encryption_key

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable specific features
ENABLE_AUTO_UPDATES=true
ENABLE_CRASH_REPORTING=false
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MENU=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Base URL for local development server (if applicable)
DEV_SERVER_URL=http://localhost:3000

# Mock data mode for testing (true/false)
USE_MOCK_DATA=false
